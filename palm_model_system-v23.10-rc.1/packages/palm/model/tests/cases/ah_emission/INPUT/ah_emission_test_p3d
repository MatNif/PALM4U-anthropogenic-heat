    spinup_pt_mean      = 300.15,
    spinup_pt_amplitude = 6.0,             ! give a dirunal cycle from 24 - 30 Â°C
    dt_spinup           = 120.0,
    data_output_during_spinup = .F.,

!
!-- Topography
!------------------------------------------------------------------------------
    topography           = 'read_from_file',

!
!-- Physics
!------------------------------------------------------------------------------
    longitude            = 103.8,
    latitude             =   1.3,

 / ! end of inipar namelist


